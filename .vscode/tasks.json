{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json"
		},
        {/*tsc --strict --lib DOM,DOM.Iterable,ES6 --target ES6 your_file.ts && esbuild your_file.js --minify --outfile=your_file.min.js*/
            "label": "Minify",
            "command": "./node_modules/.bin/esbuild",
            "type": "shell",
            "args": [ "dist/igc2kmz.js", "--minify", "--outfile=dist/igc2kmz.min.js" ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":["tsc: build - tsconfig.json"]
        }
	]
}